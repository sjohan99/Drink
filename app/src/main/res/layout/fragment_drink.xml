<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drink.DrinkFragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/drinkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/drink"
        app:icon="@drawable/ic_water_drop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintStart_toStartOf="@+id/text_home" />

    <TextView
        android:id="@+id/goalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Goal"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintStart_toStartOf="@+id/text_home"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drunkenTodayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1050"
        android:textSize="@dimen/amount_text_size"
        android:layout_marginEnd="@dimen/amount_text_margin"
        app:layout_constraintBottom_toBottomOf="@+id/slashText"
        app:layout_constraintEnd_toStartOf="@+id/slashText"
        app:layout_constraintTop_toTopOf="@+id/slashText" />

    <TextView
        android:id="@+id/measurementText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ml"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/slashText"
        app:layout_constraintStart_toStartOf="@+id/slashText"
        app:layout_constraintTop_toBottomOf="@+id/slashText" />

    <TextView
        android:id="@+id/goalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/amount_text_margin"
        android:text="2500"
        android:textSize="@dimen/amount_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/slashText"
        app:layout_constraintStart_toEndOf="@+id/slashText"
        app:layout_constraintTop_toTopOf="@+id/slashText" />

    <TextView
        android:id="@+id/slashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/amount_text_margin"
        android:text="/"
        android:textSize="@dimen/amount_text_size"
        app:layout_constraintEnd_toEndOf="@+id/text_home"
        app:layout_constraintStart_toStartOf="@+id/text_home"
        app:layout_constraintTop_toBottomOf="@+id/goalText" />


</androidx.constraintlayout.widget.ConstraintLayout>